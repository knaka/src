#!/usr/bin/env sh
# vim: set filetype=sh tabstop=2 shiftwidth=2 expandtab :
# shellcheck shell=sh

# Executes the shell script with the same name but with a `.sh` extension in the same directory or tasks directory.

set -o nounset -o errexit

export ARG0="$0"
export ARG0BASE="${0##*/}"
script_dir_path="${0%/*}"
if test "$script_dir_path" = "$0"
then
  script_dir_path=.
fi
if test -r "$script_dir_path"/"$ARG0BASE".sh
then
  script_file_path="$script_dir_path"/"$ARG0BASE".sh
elif test -r "$script_dir_path"/mise-tasks/"$ARG0BASE".sh
then
  script_file_path="$script_dir_path"/mise-tasks/"$ARG0BASE".sh
elif test -r "$script_dir_path"/tasks/"$ARG0BASE".sh
then
  script_file_path="$script_dir_path"/tasks/"$ARG0BASE".sh
else
  echo ERROR: Script file not found: "$ARG0BASE".sh >&2
  exit 1
fi
for sh in /bin/dash /bin/ash /bin/bash
do
  # Avoid using Dash on Debian because it is built with --disable-lineno option.
  test "$sh" = /bin/dash && test -e /etc/debian_version && continue
  # Avoid using Bash on macOS because it is locked to version 3.* and buggy.
  test "$sh" = "/bin/bash" && test -e /System/Library/CoreServices/SystemVersion.plist && continue
  if test -x "$sh"
  then
    exec "$sh" "$script_file_path" "$@"
  fi
done
echo "No appropriate shell found." >&2
exit 1
